<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="system.nsfw.info.entity">

    <class name="Info" table="ssh_0607_info">
        <id name="id" type="java.lang.String">
            <column name="id" length="36"></column>
            <generator class="uuid2"/>
        </id>

        <property name="type" type="java.lang.String">
            <column name="type" length="20"></column>
        </property>

        <property name="source" type="java.lang.String">
            <column name="source"></column>
        </property>

        <property name="title" type="java.lang.String">
            <column name="title" length="10"></column>
        </property>

        <property name="content" type="text">
            <column name="content"></column>
        </property>

        <property name="memo" type="java.lang.String">
            <column name="memo"></column>
        </property>

        <property name="creator" type="java.lang.String">
            <column name="creator">
            </column>
        </property>
        <property name="createTime" type="java.sql.Timestamp">
            <column name="createTime"></column>
        </property>

        <property name="state" type="java.lang.String">
            <column name="state"></column>
        </property>


    </class>
</hibernate-mapping>
